        menuScreen: 'none',
        entreeScreen: 'block',
    }));
    
    handleSaladPagePress=()=> this.setState(state => ({
        entreeScreen: 'none',
        saladScreen: 'block',
    }));
    
    handleSidePagePress=()=> this.setState(state => ({
        saladScreen: 'none',
        sideScreen: 'block',
    }));
    
    handleDrinkPagePress=()=> this.setState(state => ({
        sideScreen: 'none',
        drinkScreen: 'block',
    }));
    
    handleSaucePagePress=()=> this.setState(state => ({
        drinkScreen: 'none',
        sauceScreen: 'block',
    }));
    
    handleDessertPagePress=()=> this.setState(state => ({
        sauceScreen: 'none',
        dessertScreen: 'block',
    }));
    
    handleCartPagePress=()=> this.setState(state => ({
        dessertScreen: 'none',
        cartScreen: 'block',
    }));
    
    handleOrderPagePress=()=> this.setState(state => ({
        cartScreen: 'none',
        orderScreen: 'block',
    }));
    
